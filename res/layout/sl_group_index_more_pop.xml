<?xml version="1.0" encoding="utf-8"?>
<!-- com.tuixin11sms.tx.ResizeLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msgroom_more_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/msgroom_more_back"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/msgRoom_more_item1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip" >

        <RelativeLayout
            android:id="@+id/msgRoom_more_item1_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/msgRoom_more_item1_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dip"
                android:background="@drawable/msgroom_more_pop_invit" />

            <TextView
                android:id="@+id/msgRoom_more_item1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/msgRoom_more_item1_icon"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/msgRoom_more_item1_icon"
                android:gravity="center"
                android:text="创建我的聊天室"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/msgRoom_more_item1_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/msgroom_more_pop_line" />

    <RelativeLayout
        android:id="@+id/msgRoom_more_item2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip" >

        <RelativeLayout
            android:id="@+id/msgRoom_more_item2_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/msgRoom_more_item2_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msgroom_more_pop_autoplay" />

            <TextView
                android:id="@+id/msgRoom_more_item2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/msgRoom_more_item2_icon"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/msgRoom_more_item2_icon"
                android:gravity="center"
                android:text="搜索聊天室"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>