<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smiley_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >


    <LinearLayout
        android:id="@+id/smiley_page_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tab_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_online" />

        <ImageView
            android:id="@+id/tab_point2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:id="@+id/tab_point3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:id="@+id/tab_point4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:id="@+id/tab_point5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:id="@+id/tab_point6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:id="@+id/tab_point7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />

        <ImageView
            android:id="@+id/tab_point8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:src="@drawable/presence_invisible" />
    </LinearLayout>

    <com.tuixin11sms.tx.ExpressBackView
        android:id="@+id/smiley_gridview_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/smiley_page_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/smiley_gridview11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnWidth="35dip"
            android:drawSelectorOnTop="true"
            android:gravity="center"
            android:horizontalSpacing="10.0dip"
            android:listSelector="@xml/small_rect_selector"
            android:numColumns="6"
            android:padding="10.0dip"
            android:scrollingCache="true"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10.0dip" />
    </com.tuixin11sms.tx.ExpressBackView>

</RelativeLayout>