<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="81dip"
        android:background="@drawable/listitem_background"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/group_index_listView_item_photo"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:src="@drawable/qun_default" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_marginLeft="10dip"
                android:layout_weight="1000"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/group_index_listView_item_name"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/group_index_listView_item_GroupName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-3dp"
                        android:singleLine="true"
                        android:text="求搭讪"
                        android:textColor="#0c2049"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!--
             <ImageView
            android:id="@+id/group_index_listView_item_publicImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="12dip"
            android:layout_toRightOf="@+id/group_index_listView_item_GroupName" />
                    -->

                    <TextView
                        android:id="@+id/group_index_listView_item_gfImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dip"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@id/group_index_listView_item_GroupName"
                        android:background="@drawable/ba_13"
                        android:gravity="center"
                        android:text="官方"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/group_index_listView_item_notice"
                    android:layout_width="230dip"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="#0e2049"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp" >

                    <TextView
                        android:id="@+id/group_index_listView_item_manager"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ba_21"
                        android:gravity="center"
                        android:text="房主"
                        android:textColor="#ffffff"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/group_index_listView_item_manager_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dip"
                        android:singleLine="true"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/group_index_listView_item_onlineMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:text="23"
            android:textColor="#b2b4b9"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/group_index_listView_item_iv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dip"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/group_index_listView_item_onlineMember"
            android:src="@drawable/online" />

        <TextView
            android:id="@+id/sl_unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dip"
            android:background="@drawable/magst_new"
            android:gravity="center"
            android:paddingBottom="1.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:paddingTop="1.0dip"
            android:text="1"
            android:textColor="#ffffffff"
            android:textSize="12.0sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/group_rcv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>