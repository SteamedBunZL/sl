<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="56dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp" >

        <ImageView
            android:id="@+id/multiselect_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/file_unsel"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/row_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="6dip"
            android:layout_toRightOf="@id/multiselect_icon"
            android:src="@drawable/rec_doc" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/row_image"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/top_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/title_text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/bottom_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="size"
                android:textColor="@color/sub_title_text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/area_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/right_03"
            android:focusable="false" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/content_line_color_gray" />
    </RelativeLayout>

</RelativeLayout>