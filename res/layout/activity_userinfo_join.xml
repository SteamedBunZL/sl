<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mBackground"
    style="@style/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#96eeeeee" >

        <LinearLayout
            android:id="@+id/back_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="返回"
                android:textColor="@color/content_color_blue"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15.0dip"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/return_prompt"
            android:textAppearance="@style/White_Text"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/con_info_title_name"
            style="@style/Titile_Name_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sl_join_btn" />

        <Button
            android:id="@+id/userinfo_join_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@color/transparent"
            android:text="发送"
            android:textColor="@color/content_color_blue"
            android:textSize="17dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:layout_alignParentBottom="true"
            android:background="#cac8c9" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/userinfo_join_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/sl_userinfo_join_sayhello"
            android:textColor="@color/sub_title_text_color"
            android:textSize="14sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginTop="10dip"
            android:background="#d5d7dc" />

        <EditText
            android:id="@+id/userinfo_join_input_box"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/sll_more_item_select"
            android:paddingLeft="15dp"
            android:textColor="#0c2049"
            android:textSize="16sp" >
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:background="#d5d7dc" />
    </LinearLayout>

</LinearLayout>