<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/user_info_phtoto_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:text="@string/userinfo_album"
        android:textColor="@color/sub_title_text_color"
        android:textSize="12sp" />

    <View
        style="@style/content_line_style"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_user_infor_no_album_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#b9bbbe"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/user_none_album"
            android:text="TA暂时还没有上传照片"
            android:textSize="12sp" />

        <com.shenliao.view.SlGridView
            android:id="@+id/user_info_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="7dp"
            android:numColumns="4"
            android:listSelector="@android:color/transparent"
            android:stretchMode="columnWidth"
            android:visibility="gone"
            android:verticalSpacing="7dp" />
    </LinearLayout>

    <View style="@style/content_line_style" />

</LinearLayout>