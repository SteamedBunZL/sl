<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sll_more_item_select"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d7dc" />

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="fill_parent"
        android:layout_height="81dip" >

        <RelativeLayout
            android:id="@+id/info_user_head"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="12.0dip" >

            <ImageView
                android:id="@+id/con_info_user_head"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/user_infor_head_boy" />

            <ImageView
                android:id="@+id/admin_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/manager_56" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/info_user_head"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/con_info_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxWidth="150dp"
                    android:singleLine="true"
                    android:text="我是boboboobobobobobobobo"
                    android:textColor="#0c2049"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.tuixin11sms.tx.view.LevelTextView
                    android:id="@+id/user_info_level"
                    style="@style/level_text_style"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="LV 10" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/con_info_tuixin_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tuixin_id"
                    android:textColor="#0c2049"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/con_info_tuixin_id_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="000000"
                    android:textColor="#0c2049"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/con_info_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/con_info_next"
            android:src="@drawable/point"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/con_info_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/right_03" />
    </RelativeLayout>

</LinearLayout>