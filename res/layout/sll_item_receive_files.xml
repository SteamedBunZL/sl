<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_audio_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent" >

        <RelativeLayout
            android:id="@+id/rl_item_infors"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/iv_file_thumb"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@drawable/in_03" />

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/iv_file_thumb"
                android:text="照片"
                android:textColor="@color/title_text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_item_file_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_item_name"
                android:text="(20)"
                android:textColor="#b9bbb4"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_item_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_03" />

            <TextView
                android:id="@+id/tv_item_newFileCount"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/iv_item_arrow_right"
                android:background="@drawable/red_06"
                android:gravity="center"
                android:text="2"
                android:textColor="#ffffff"
                android:textSize="11sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>