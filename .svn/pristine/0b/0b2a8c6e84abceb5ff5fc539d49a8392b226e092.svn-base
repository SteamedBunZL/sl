<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mBackground"
    style="@style/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/group_index_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#96eeeeee" >

        <LinearLayout
            android:id="@+id/btn_back_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="返回"
                android:textColor="@color/content_color_blue"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            style="@style/Titile_Name_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_update_password" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:layout_alignParentBottom="true"
            android:background="#cac8c9" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_size"
        android:layout_marginTop="18dp"
        android:background="#d5d7dc" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 输入旧密码 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sll_more_item_select"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/sl_tab_setting_update_Text_oldPassWord"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:hint="@string/setting_update_oldpassword"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/title_text_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="15sp" />
            <!-- 输入新密码 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#d5d7dc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sll_more_item_select"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/sl_tab_setting_update_Text_NewpassWord"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:hint="@string/setting_update_newpassword"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/title_text_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="15sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_size"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#d5d7dc" />
            <!-- 重复输入新密码 -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/sl_tab_setting_update_Text_NewpassWordAgain"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:hint="@string/setting_update_newpassword_again"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/title_text_color"
                android:textColorHint="@color/edit_hint_color"
                android:textSize="15sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line_size"
                android:background="#d5d7dc" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/sl_tab_setting_update_btn"
                style="@style/action_btn_style"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="23dip"
                android:text="修改"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold" >
            </Button>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>