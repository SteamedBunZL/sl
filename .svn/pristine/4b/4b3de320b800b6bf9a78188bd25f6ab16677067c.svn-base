<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_rel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/alpha0" >

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="270dp"
        android:layout_height="194dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/sll_no_myinfo_dialog"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="20dp"
            android:text="完善个人资料"
            android:textColor="@android:color/black"
            android:textSize="20dip"
            android:visibility="gone" >
        </TextView>

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:src="@drawable/no_myinfo" >
        </ImageView>

        <LinearLayout
            android:id="@+id/ll_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要您"
                android:textColor="@color/title_text_color"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完善个人资料"
                android:textColor="@color/select_lan"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="才可以继续哦~"
                android:textColor="@color/title_text_color"
                android:textSize="14sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_heng"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#d5d7dc" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="44dp" >

                <RelativeLayout
                    android:layout_width="135dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/dialog_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="马上完善"
                        android:textColor="@color/select_lan"
                        android:textSize="15dp"
                        android:textStyle="bold" >
                    </Button>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:background="#d5d7dc" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/dialog_imageView"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/title_text_color"
                    android:textSize="15dp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>