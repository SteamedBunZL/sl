<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_gravity="center_vertical"
        android:background="@drawable/sl_tab_sign_selector"
        android:paddingLeft="9dip"
        android:paddingRight="9dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已接收的文件"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/sl_tab_setting_inculde_signText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/sl_tab_setting_include_image"
            android:maxWidth="180dip"
            android:singleLine="true"
            android:textColor="@color/searchtext_color" />

        <ImageView
            android:id="@+id/sl_tab_setting_include_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/preference_arrows" />
    </RelativeLayout>

</LinearLayout>