<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"  
  android:id="@+id/recordscreen_pop"
  android:background="@drawable/record_back"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">  
      
    <RelativeLayout  android:id="@+id/recordscreen_layout1"
		             android:background="#00000000"
		             android:layout_width="fill_parent"
                     android:layout_centerHorizontal="true" 
		             android:layout_height="wrap_content">  
	<TextView 
	        android:id="@+id/recordscreen_progressTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:textSize="15.0sp"
	        android:text="00:00"
	        android:layout_marginTop="8dp"
	        android:gravity="center"
	        android:background="@drawable/record_progresstime_bg"
	        android:layout_centerHorizontal="true"
	/>        
		             
       <ImageView android:id="@+id/recordscreen_mainMicImg"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/recordscreen_progressTime"
                android:layout_centerHorizontal="true"
                android:background="@drawable/record_screen_mic"/>
     
       <ImageView android:id="@+id/recordscreen_MicValoum"
                  android:layout_width="wrap_content" 
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:layout_alignBottom="@id/recordscreen_mainMicImg"
                   android:layout_toRightOf="@id/recordscreen_mainMicImg"/>
                   
                   
       <TextView android:id="@+id/recordscreen_text1"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:textColor="#ffffff" android:textSize="20sp"
                android:layout_marginTop="2dp"
                android:text="@string/record_screen_info1"
                android:layout_below="@id/recordscreen_MicValoum" android:layout_centerHorizontal="true"/>
       <TextView android:id="@+id/recordscreen_text2"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#ffffff" android:textSize="14sp"
                android:text="@string/record_screen_info2"
                 android:layout_below="@id/recordscreen_text1" android:layout_centerHorizontal="true"/>             
   </RelativeLayout> 
   
                
  
</RelativeLayout>  

