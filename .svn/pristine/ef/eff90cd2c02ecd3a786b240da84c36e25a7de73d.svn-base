<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="19dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/sl_tab_setting_userinfo_phtoto_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sll_userinfo_morephoto"
                android:textColor="#888888"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/album_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="(上传自己的照片，认识更多的好友)"
                android:textColor="#888888"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#d5d7dc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sll_more_item_select"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp" >

        <com.shenliao.view.SlGridView
            android:id="@+id/sl_tab_setting_userinfo_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:horizontalSpacing="7dp"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="7dp" />
    </LinearLayout>

</LinearLayout>