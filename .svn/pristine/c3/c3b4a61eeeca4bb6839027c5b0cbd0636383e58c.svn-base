<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_result_listview_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="81dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_add_result_listview__photo"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user_infor_head_boy" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:id="@+id/ll_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true" >

                    <TextView
                        android:id="@+id/search_add_result_listview_nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:maxWidth="200dip"
                        android:singleLine="true"
                        android:text="小柜"
                        android:textColor="@color/title_text_color"
                        android:textSize="16sp"
                        android:textStyle="bold" >
                    </TextView>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <com.tuixin11sms.tx.view.LevelTextView
                        android:id="@+id/tv_level"
                        style="@style/level_text_style"
                        android:text="LV22"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_nickname"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/search_listview_linear"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:background="@drawable/user_infor_sex_boy"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/search_add_result_listview_text_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="11"
                            android:textColor="@android:color/white"
                            android:textSize="10.0sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/search_add_result_listview_hasalbum"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/search_listview_linear"
                        android:src="@drawable/photo_look" />

                    <TextView
                        android:id="@+id/search_add_result_listview_text_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/search_add_result_listview_hasalbum"
                        android:text="北京  朝阳"
                        android:textColor="@color/sub_title_text_color"
                        android:textSize="12.0sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:id="@+id/search_add_result_listview_text_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="123123123"
                        android:textColor="#777777"
                        android:textSize="12.0sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>