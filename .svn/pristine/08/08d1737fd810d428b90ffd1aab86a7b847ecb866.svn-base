<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_tx_friend_relative"
    style="@style/bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tab_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#96eeeeee" >

        <LinearLayout
            android:id="@+id/btn_back_addFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="返回"
                android:textColor="@color/content_color_blue"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/back_left"
            android:gravity="center"
            android:paddingLeft="@dimen/back_paddingLeft"
            android:text="@string/back_btn"
            android:textAppearance="@style/White_Text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tuixin_info_title"
            style="@style/Titile_Name_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/seach_tui_firend" />

        <Button
            android:id="@+id/find_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:text="@string/seach_btn"
            android:textColor="@color/content_color_blue"
            android:textSize="17sp"
            android:visibility="visible" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#cac8c9" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tuixin_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/friend_info"
        android:textAppearance="@style/White_Text"
        android:textColor="@color/black"
        android:visibility="gone" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="18dp"
        android:background="#d5d7dc" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/sll_more_item_select"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/search_type" />

            <EditText
                android:id="@+id/search_input_box"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/sll_more_item_select"
                android:gravity="center_vertical"
                android:hint="@string/hint_search_friend_bar"
                android:textColorHint="#b9bbbe"
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/seach_clean_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/clear_all"
                android:visibility="gone" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_size"
            android:background="@color/content_line_color_gray" />
    </LinearLayout>

</LinearLayout>