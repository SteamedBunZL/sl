<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <RelativeLayout style="@style/title_bar_layout" >

        <TextView
            android:id="@+id/group_join_title"
            style="@style/title_bar_textview"
            android:text="群组动态" />

        <View
            style="@style/content_line_style"
            android:layout_alignParentBottom="true" />

        <TextView
            android:id="@+id/group_message_delbtn"
            style="@style/title_right_textview"
            android:text="删除" />
        
        <TextView
                android:id="@+id/tv_title_back"
                style="@style/title_left_textview"
                android:text="返回" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/group_message_listView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:dividerHeight="0dip"
            android:fadingEdge="none" />
    </RelativeLayout>

</LinearLayout>